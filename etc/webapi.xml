<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/GssiCustomily/:id" method="GET">
        <service class="AHT\GssiCustomily\Api\GssiCustomilyRepositoryInterface" method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/GssiCustomily" method="GET">
        <service class="AHT\GssiCustomily\Api\GssiCustomilyRepositoryInterface" method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/GssiCustomilyPriceBySku/:sku" method="GET">
        <service class="AHT\GssiCustomily\Api\GssiCustomilyRepositoryInterface" method="getPriceBySku"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
     <route url="/V1/GssiCustomilyPrice/:price" method="GET">
        <service class="AHT\GssiCustomily\Api\GssiCustomilyRepositoryInterface" method="getPrice"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>